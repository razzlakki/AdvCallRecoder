<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/voice_inbox_inactive" />
    </item>
    <item android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/voice_inbox"></bitmap>
    </item>
    <item android:drawable="@drawable/voice_inbox" android:state_checked="true" />
    <item>
        <bitmap android:gravity="center" android:src="@drawable/voice_inbox_inactive" />
    </item>
</selector>